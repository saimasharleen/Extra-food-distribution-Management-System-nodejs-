<!------------Form part start------------->

<div class="full_wrapper footer_bg">
        <div class="wrapper footer_main">
           <div class="work_head footer_head">

            <%if(posts.length!=0){%>
               <center><h2>All Requests:</h2></center>
            </div>
            <div>
                <h2>All Requests:</h2>
                <br>
            <table border="1">
                <tr>
                 <td>Restaurant Name:</td>
                 <td>Restaurant Description:</td>
                <td>Actions:</td>
             </tr>
             
             <% for(var i=0; i < posts.length; i++){%>
             
             <tr>
                 <td><%= posts[i].restaurantname %></td>
                 <td><%= posts[i].restaurantd %></td>
            <td>
                <a href="/owner/requests/accept/<%= posts[i].id %>">Accept</a> | 
                <a href="/owner/requests/reject/<%= posts[i].id%>">Reject</a>
            </td>
        </tr>
    </table>
            </div>
               <%}}else{%>
               <br>
               <br>
               <br>
               <br>
               <br>
               <br>
             <center><h2>You have no pending requests!</h2></center>
             </div>
             <%}%>
        </div>
    </div>
